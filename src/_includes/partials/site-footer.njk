
<hr/>
<footer class="footer-wrapper">
  <p class="copyright">&copy; {{ languages[page.lang].siteName }}, 2024</p>
  <p>
    <a href="https://www.netlify.com/">{{ languages[page.lang].siteFooterPoweredBy }}</a>
  </p>
  <nav class="[ nav ] [ site-header__nav ]" aria-label="Secondary navigaton">
    <ul class="nav__list">
      {% for item in navigation[page.lang].secondary %}
        <li>
          <a href="{{ item.url | locale_url }}" {{ helpers.getLinkActiveState(item.url, page.url) | safe }}>{{ item.text }}</a >
        </li>
      {% endfor %}
    </ul>
  </nav>
</footer>
